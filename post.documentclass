\documentclass {stuebinm-basic}



\newcommand {\summary} {
	\writefile {description.aux} {\printtitle

		\tag {div class="box-main"} {
			\tag {div class="text"} {#1 
				\closingtag {p}
				\center{\href {\get {$target}} {(read more)}}
			}
		}
	}
	\set {$summary} {
		\tag {div class="box-main"} {
			\tag {div class="text"} {#1 
				\closingtag {p}
				\center{\href {\get {$target}} {(read more)}}
			}
		}
	}
}

